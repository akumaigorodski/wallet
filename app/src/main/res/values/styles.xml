<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Bridge">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:navigationBarColor">@color/bg</item>
        <item name="snackbarStyle">@style/snackbarStyle</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text</item>
        <item name="colorPrimaryDark">@color/bg</item>
        <item name="android:disabledAlpha">0.7</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="snackbarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/panel_snackbar</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="android:windowBackground">@color/bg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- item styles -->

    <style name="GreenButton">
        <item name="nb_textColor">@color/colorAccent</item>
        <item name="nb_focusColor">@color/buttonGreenRipple</item>
        <item name="nb_borderColor">@color/buttonGreenBorder</item>
        <item name="nb_backgroundColor">@color/buttonGreen</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="nb_borderWidth">2dp</item>
        <item name="nb_radius">6dp</item>
    </style>

    <style name="RedButton" parent="GreenButton">
        <item name="nb_focusColor">@color/buttonRedRipple</item>
        <item name="nb_borderColor">@color/buttonRedBorder</item>
        <item name="nb_backgroundColor">@color/buttonRed</item>
    </style>

    <style name="GrayButton" parent="GreenButton">
        <item name="nb_focusColor">@color/buttonGrayRipple</item>
        <item name="nb_borderColor">@color/buttonGrayBorder</item>
        <item name="nb_backgroundColor">@color/bg</item>
    </style>

    <style name="ToggleButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@drawable/button_toggle_selector</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="GrayDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#33999999</item>
    </style>

    <style name="StandardLinearLayout" parent="AppTheme">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="StandardXYMarginLinearLayout" parent="StandardLinearLayout">
        <item name="android:background">@color/bg</item>
        <item name="android:padding">15dp</item>
    </style>

    <!-- view styles -->

    <style name="InputHintView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="BoundedView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">500sp</item>
    </style>

    <style name="FillingView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="XMarginFillingView" parent="FillingView">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="XSmallMarginFillingView" parent="FillingView">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="InFlightView">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Card and payment list -->

    <style name="Card" parent="FillingView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Tag">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Emphasized" parent="BoundedView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- chip text -->

    <style name="ChipTextGray">
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingLeft">7sp</item>
        <item name="android:paddingRight">7sp</item>
        <item name="android:paddingBottom">6sp</item>
        <item name="android:background">@drawable/border_gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ChipTextGrayMargin" parent="ChipTextGray">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="Notification" parent="ChipTextGray">
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- nachos -->

    <style name="DefaultChipSuggestionTextView">
        <item name="chipVerticalSpacing">6dp</item>
        <item name="chipHorizontalSpacing">4dp</item>
        <item name="chipBackground">@color/colorAccent</item>
        <item name="android:inputType">textMultiLine|textVisiblePassword</item>
        <item name="android:completionThreshold">1</item>
        <item name="chipTextSize">18sp</item>
        <item name="chipHeight">28dp</item>
    </style>
</resources>
