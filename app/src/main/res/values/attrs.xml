<resources>

    <!-- nachos -->

    <declare-styleable name="NachoTextView">
        <attr name="chipHorizontalSpacing" format="reference|dimension" />
        <attr name="chipBackground" format="reference|color"/>
        <attr name="chipCornerRadius" format="reference|dimension"/>
        <attr name="chipTextColor" format="reference|color"/>
        <attr name="chipTextSize" format="reference|dimension"/>
        <attr name="chipHeight" format="reference|dimension"/>
        <attr name="chipVerticalSpacing" format="reference|dimension"/>
    </declare-styleable>

    <!-- nobobutton -->

    <attr name="nb_borderWidth" format="dimension"/>
    <attr name="nb_borderColor" format="color"/>
    <attr name="nb_radius" format="dimension"/>
    <attr name="nb_backgroundColor" format="color"/>
    <attr name="nb_disableColor" format="color"/>
    <attr name="nb_focusColor" format="color"/>
    <attr name="nb_enabled" format="boolean"/>

    <attr name="nb_shape" format="integer">
        <flag name="rectangle" value="101"/>
        <flag name="oval" value="102"/>
    </attr>

    <declare-styleable name="NoboButton">
        <attr name="nb_borderWidth"/>
        <attr name="nb_borderColor"/>
        <attr name="nb_radius"/>
        <attr name="nb_backgroundColor"/>
        <attr name="nb_disableColor"/>
        <attr name="nb_focusColor"/>
        <attr name="nb_enabled"/>
        <attr name="nb_textColor" format="color"/>
        <attr name="nb_disabledTextColor" format="color"/>
        <attr name="nb_text" format="string"/>
        <attr name="nb_textAllCaps" format="reference|boolean"/>
        <attr name="nb_textStyle" format="integer">
            <flag name="normal" value="0"/>
            <flag name="bold" value="1"/>
            <flag name="italic" value="2"/>
        </attr>
        <attr name="nb_fontIcon" format="string"/>
        <attr name="nb_iconSize" format="dimension"/>
        <attr name="nb_iconColor" format="color"/>
        <attr name="nb_iconPosition" format="enum">
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="top" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
        <attr name="nb_drawableResource" format="reference"/>
        <attr name="nb_iconPadding" format="dimension"/>
        <attr name="nb_gravity" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="top" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ViewButton">
        <attr name="nb_borderWidth"/>
        <attr name="nb_borderColor"/>
        <attr name="nb_radius"/>
        <attr name="nb_backgroundColor"/>
        <attr name="nb_disableColor"/>
        <attr name="nb_focusColor"/>
        <attr name="nb_shape"/>
        <attr name="nb_enabled"/>
    </declare-styleable>

    <!-- bottom navigation -->

    <declare-styleable name="AHBottomNavigationBehavior_Params">
        <attr name="tabLayoutId" format="reference" />
        <attr name="selectedBackgroundVisible" format="boolean" />
        <attr name="translucentNavigationEnabled" format="boolean" />
        <attr name="colored" format="boolean" />
        <attr name="accentColor" format="color" />
        <attr name="inactiveColor" format="color" />
        <attr name="disableColor" format="color" />
        <attr name="coloredActive" format="color" />
        <attr name="coloredInactive" format="color" />
    </declare-styleable>

    <!-- flow layout -->

    <declare-styleable name="FlowLayout">
        <attr name="android:orientation" />
        <attr name="layoutDirection" format="enum">
            <enum name="ltr" value="0"/>
            <enum name="rtl" value="1"/>
        </attr>
        <attr name="debugDraw" format="boolean"/>
        <attr name="maxLines" format="integer"/>
        <attr name="weightDefault" format="float" />
        <attr name="android:gravity"/>
    </declare-styleable>
    <declare-styleable name="FlowLayout_LayoutParams">
        <attr name="layout_newLine" format="boolean"/>
        <attr name="layout_weight" format="float"/>
        <attr name="android:layout_gravity"/>
    </declare-styleable>

    <!-- Blur view -->

    <declare-styleable name="RealtimeBlurView">
        <attr name="realtimeBlurRadius" format="dimension"/>
        <attr name="realtimeDownsampleFactor" format="float"/>
        <attr name="realtimeOverlayColor" format="color"/>
    </declare-styleable>

    <!-- Swipe-reveal layout -->

    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragEdge">
            <flag name="left" value="1"/>
            <flag name="right" value="2"/>
            <flag name="top" value="4"/>
            <flag name="bottom" value="8"/>
        </attr>

        <attr name="mode">
            <enum name="normal" value="0"/>
            <enum name="same_level" value="1"/>
        </attr>

        <attr name="minDistRequestDisallowParent" format="dimension"/>
        <attr name="flingVelocity" format="integer"/>
    </declare-styleable>
</resources>